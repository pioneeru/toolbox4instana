
## Elasticsearch aliases
ELASTICPASS=`oc -n instana-elastic get secret instana-es-elastic-user --template='{{ index .data "elastic" | base64decode }}'`
alias es="oc -n instana-elastic exec instana-es-default-0 -- curl -uelastic:$ELASTICPASS"

## Cassandra aliases
CASSPASS=`oc -n instana-cassandra get secret instana-superuser --template='{{ index .data "password" | base64decode }}'`
alias cass="oc exec -n instana-cassandra -c cassandra instana-cassandra-default-sts-0 -- "
alias casssql="oc exec -n instana-cassandra -c cassandra instana-cassandra-default-sts-0 -- cqlsh -u instana-superuser -p $CASSPASS -e "

